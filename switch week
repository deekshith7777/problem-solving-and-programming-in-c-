#include <stdio.h>

int main()
{
    int day;
    printf("enter day 1-7:");
    scanf("%d",&day);
    switch(day)
    {
        case 1:
        printf("1=sun");
        break;
       case 2:
       printf("2=mon");
       break;
       
       case 3:
       printf("3=tue");
       break;
   
   
       case 4:
       printf("4=wed");
       break;
   
   
       case 5:
       printf("5=th");
       break;
   
   
       case 6:
       printf("6=fri");
       break;
   
   
       case 7:
       printf("7=sat");
       break;
   
   default:
   printf("enter between 1-7");
    }
    return 0;
}
