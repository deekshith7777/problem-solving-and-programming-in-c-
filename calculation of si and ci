#include <stdio.h>
#include<math.h>
int main()
{
    float p,t,r,si,ci;
    printf("enter principle amount: ");
    scanf("%f",&p);
    printf("enter time in year:");
    scanf("%f",&t);
    printf("enter rate in percent:");
    scanf("%f",&r);
    si=(p*t*r)/100;
    ci=p*(pow(1+(r/100),t));
    printf("si is:%f",si);
    printf("ci is: %f",ci);
    return 0;
}
